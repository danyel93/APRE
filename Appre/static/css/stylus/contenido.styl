.contenido
	background-color c-negro
	display block
	height 100%
	position relative
	width 100%
	transform-style preserve-3d
	transform translate3d(0, 0, 0)
	perspective 1000
	backface-visibility hidden
	.landing
		height 50%
		left 50%
		max-width 1366px
		position absolute
		top 50%
		transform translate(-50%, -50%)
		transform-style preserve-3d
		width 100%
		h1
			font-size 4rem
			font-weight 800
			text-align center
			color white
			display block
			padding 20px 0
			margin 0 
		h2
			font-size 2rem
			font-weight 500
			text-align center
			color white
			padding 10px 0
			margin 0
		.comenzar
			font-size 2.5rem
			color white
			background-color azul
			width 300px
			text-align center
			border-radius 3px
			transition all 400ms ease-in-out
			padding 20px
			cursor pointer
			position absolute
			bottom 5%
			left 50%
			margin-left -160px
			&:hover
				background-color azul-2
				
			
		
		
.bnc-pro
	background-color #EEEEEE
	display block
	padding 50px 0
	position relative
	width 100%
	.bnc-pro-con
		background-color #ffffff
		border-radius 3px
		box-shadow bs-1
		font-size 2rem
		position relative
		overflow hidden
		ul
			position relative
			width 40%
			li
				box-shadow bs-1
				padding 25px 0
				position relative
				transition all 400ms ease
				margin 0
				background-color #ffffff
				&:hover
					box-shadow bs-2
				figure
					width 20%
					margin 0 10px
					padding 0
					vertical-align middle
					display inline-block
					position relative
					img
						max-width 100%
						border-radius 50%
				.texto
					display inline-block
					width 75%
					margin 0
					vertical-align top
					position relative
				span
					position absolute
					bottom 5px
					right 10px
					color c-negro
					font-size 1.5rem
					font-weight 800